@page "/403"
@model _231046Y_Assignment2.Pages.Error403Model
@{
    ViewData["Title"] = "403 - Forbidden";
    Response.StatusCode = 403;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-danger mb-3">403</h1>
                <h2 class="mb-4">Forbidden</h2>
                <p class="lead mb-4">You do not have permission to access this resource.</p>
                <p class="text-muted mb-4">This page requires authentication or you do not have the necessary permissions to view it.</p>
                <div class="mt-4">
                    <a asp-page="/Login" class="btn btn-primary me-2">Go to Login</a>
                    <a asp-page="/Index" class="btn btn-outline-secondary">Go to Homepage</a>
                </div>
            </div>
        </div>
    </div>
</div>
