@page "/testerrors"
@model _231046Y_Assignment2.Pages.TestErrorsModel
@{
    ViewData["Title"] = "Test Error Pages";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="mb-4">Test Error Pages</h2>
            <p class="lead mb-4">Use the buttons below to test all custom error pages (404, 403, 500).</p>
            
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-warning">
                        <div class="card-body">
                            <h5 class="card-title text-warning">404 - Page Not Found</h5>
                            <p class="card-text">Test the 404 error page by visiting a non-existent URL.</p>
                            <div class="d-grid gap-2">
                                <a href="/this-page-does-not-exist" class="btn btn-warning">Trigger 404 Error</a>
                                <a href="/random-page-123" class="btn btn-outline-warning btn-sm">Alternative 404 Test</a>
                                <a href="/404" class="btn btn-outline-secondary btn-sm">View 404 Page Directly</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-danger">
                        <div class="card-body">
                            <h5 class="card-title text-danger">500 - Internal Server Error</h5>
                            <p class="card-text">Test the 500 error page by triggering a server error.</p>
                            <div class="d-grid gap-2">
                                <form method="post" asp-page-handler="Trigger500" class="d-inline">
                                    <button type="submit" class="btn btn-danger w-100">Trigger 500 Error</button>
                                </form>
                                <a href="/500" class="btn btn-outline-secondary btn-sm">View 500 Page Directly</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-secondary">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">403 - Forbidden</h5>
                            <p class="card-text">Test the 403 error page by triggering a forbidden access error.</p>
                            <div class="d-grid gap-2">
                                <form method="post" asp-page-handler="Trigger403" class="d-inline">
                                    <button type="submit" class="btn btn-secondary w-100">Trigger 403 Error</button>
                                </form>
                                <a href="/403" class="btn btn-outline-secondary btn-sm">View 403 Page Directly</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <h5 class="alert-heading">Testing Instructions</h5>
                <p><strong>How to test each error page:</strong></p>
                <ul class="mb-0">
                    <li><strong>404 Error:</strong> Click "Trigger 404 Error" to visit a non-existent page. You can also manually type any invalid URL in the browser (e.g., <code>/test-404</code>)</li>
                    <li><strong>500 Error:</strong> Click "Trigger 500 Error" button to simulate a server error</li>
                    <li><strong>403 Error:</strong> Click "Trigger 403 Error" button to simulate a forbidden access error</li>
                    <li><strong>Direct Access:</strong> You can also directly visit <code>/404</code>, <code>/403</code>, or <code>/500</code> to view the error pages</li>
                </ul>
            </div>

            <div class="alert alert-warning mt-3">
                <strong>Note:</strong> These are test pages for demonstration purposes. In production, these errors would occur naturally:
                <ul class="mb-0 mt-2">
                    <li><strong>404:</strong> When a user visits a non-existent URL</li>
                    <li><strong>500:</strong> When an unhandled exception occurs in the application</li>
                    <li><strong>403:</strong> When a user tries to access a resource they don't have permission for</li>
                </ul>
            </div>

            <div class="mt-4 text-center">
                <a asp-page="/Index" class="btn btn-primary me-2">Back to Homepage</a>
                <a asp-page="/Login" class="btn btn-outline-secondary">Go to Login</a>
            </div>
        </div>
    </div>
</div>
