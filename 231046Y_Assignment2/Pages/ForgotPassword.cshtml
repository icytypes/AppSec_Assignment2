@page
@model _231046Y_Assignment2.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password - Fresh Farm Market";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">Forgot Password</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
                            @Model.Message
                            @if (!string.IsNullOrEmpty(Model.ResetLink))
                            {
                                <div class="mt-3 p-3 bg-light border rounded">
                                    <h6 class="mb-2"><strong>ðŸ”— Password Reset Link:</strong></h6>
                                    <div class="input-group">
                                        <input type="text" class="form-control" value="@Model.ResetLink" id="resetLink" readonly>
                                        <button class="btn btn-outline-secondary" type="button" onclick="copyResetLink()">Copy</button>
                                    </div>
                                    <div class="mt-2">
                                        <a href="@Model.ResetLink" class="btn btn-success btn-sm" target="_blank">Click Here to Reset Password</a>
                                    </div>
                                    <small class="text-muted d-block mt-2">This link will expire in 24 hours. You can also visit <a href="/viewemails">View Sent Emails</a> to see all password reset emails.</small>
                                </div>
                            }
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ForgotPassword.Email" class="form-label"></label>
                            <input asp-for="ForgotPassword.Email" class="form-control" type="email" />
                            <span asp-validation-for="ForgotPassword.Email" class="text-danger"></span>
                            <small class="form-text text-muted">Enter your email address and we'll send you a link to reset your password.</small>
                        </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Send Reset Link</button>
                                <a asp-page="/Login" class="btn btn-link">Back to Login</a>
                                <a asp-page="/ViewEmails" class="btn btn-outline-info btn-sm mt-2">View Sent Emails</a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function copyResetLink() {
            var resetLinkInput = document.getElementById('resetLink');
            resetLinkInput.select();
            resetLinkInput.setSelectionRange(0, 99999); // For mobile devices
            document.execCommand('copy');
            alert('Reset link copied to clipboard!');
        }
    </script>
}
