@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-danger mb-3">Error</h1>
                <h2 class="mb-4">An error occurred while processing your request.</h2>
                
                @if (Model.ShowRequestId)
                {
                    <p class="text-muted mb-4">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                <div class="mt-4">
                    <a asp-page="/Index" class="btn btn-primary me-2">Go to Homepage</a>
                    <a asp-page="/Login" class="btn btn-outline-secondary">Go to Login</a>
                </div>

                @if (Model.ShowRequestId)
                {
                    <div class="mt-5">
                        <h3>Development Mode</h3>
                        <p class="text-muted">
                            Swapping to the <strong>Development</strong> environment displays detailed information about the error that occurred.
                        </p>
                        <p class="text-muted">
                            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                            It can result in displaying sensitive information from exceptions to end users.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
