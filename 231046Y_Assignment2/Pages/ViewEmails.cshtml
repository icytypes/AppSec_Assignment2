@page "/viewemails"
@model _231046Y_Assignment2.Pages.ViewEmailsModel
@{
    ViewData["Title"] = "View Sent Emails";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Sent Emails (Demo/Testing)</h3>
                    <form method="post" asp-page-handler="ClearEmails" class="d-inline">
                        <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to clear all email logs?')">Clear Logs</button>
                    </form>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Note:</strong> This page shows all password reset emails that have been "sent" (logged for demo purposes).
                        In production, these would be sent via SMTP to the user's email address.
                    </div>

                    @if (string.IsNullOrEmpty(Model.EmailLog))
                    {
                        <p class="text-muted">No emails have been sent yet.</p>
                    }
                    else
                    {
                        <pre class="bg-light p-3 border rounded" style="max-height: 600px; overflow-y: auto; white-space: pre-wrap; word-wrap: break-word;">@Model.EmailLog</pre>
                    }

                    <div class="mt-3">
                        <a asp-page="/ForgotPassword" class="btn btn-primary">Send Test Email</a>
                        <a asp-page="/Index" class="btn btn-outline-secondary">Back to Homepage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
