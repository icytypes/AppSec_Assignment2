@page "/500"
@model _231046Y_Assignment2.Pages.Error500Model
@{
    ViewData["Title"] = "500 - Server Error";
    Response.StatusCode = 500;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-danger mb-3">500</h1>
                <h2 class="mb-4">Internal Server Error</h2>
                <p class="lead mb-4">An error occurred while processing your request.</p>
                <p class="text-muted mb-4">We apologize for the inconvenience. Our team has been notified and is working to resolve the issue. Please try again later.</p>
                <div class="mt-4">
                    <a asp-page="/Index" class="btn btn-primary me-2">Go to Homepage</a>
                    <button onclick="window.location.reload()" class="btn btn-outline-secondary">Try Again</button>
                </div>
            </div>
        </div>
    </div>
</div>
