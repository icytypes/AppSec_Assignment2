@page
@model _231046Y_Assignment2.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password - Fresh Farm Market";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">Reset Password</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    @if (!Model.IsValidToken)
                    {
                        <div class="text-center">
                            <a asp-page="/Login" class="btn btn-primary">Back to Login</a>
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            <input type="hidden" asp-for="ResetPassword.Token" />
                            <input type="hidden" asp-for="ResetPassword.Email" />
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="ResetPassword.NewPassword" class="form-label"></label>
                                <input asp-for="ResetPassword.NewPassword" class="form-control" type="password" />
                                <small class="form-text text-muted">Minimum 12 characters with uppercase, lowercase, numbers, and special characters.</small>
                                <span asp-validation-for="ResetPassword.NewPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ResetPassword.ConfirmNewPassword" class="form-label"></label>
                                <input asp-for="ResetPassword.ConfirmNewPassword" class="form-control" type="password" />
                                <span asp-validation-for="ResetPassword.ConfirmNewPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Reset Password</button>
                                <a asp-page="/Login" class="btn btn-link">Back to Login</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
