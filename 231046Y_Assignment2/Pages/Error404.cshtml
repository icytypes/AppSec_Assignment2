@page "/404"
@model _231046Y_Assignment2.Pages.Error404Model
@{
    ViewData["Title"] = "404 - Page Not Found";
    Response.StatusCode = 404;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-warning mb-3">404</h1>
                <h2 class="mb-4">Page Not Found</h2>
                <p class="lead mb-4">The page you are looking for does not exist or has been moved.</p>
                <p class="text-muted mb-4">The URL you entered may be incorrect, or the page may have been removed.</p>
                <div class="mt-4">
                    <a asp-page="/Index" class="btn btn-primary me-2">Go to Homepage</a>
                    <a asp-page="/Login" class="btn btn-outline-secondary">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
